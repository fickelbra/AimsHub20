<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Aims Hub</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/aimsdefault")
    <style type="text/css">
        .w3-bar .w3-button {
            padding: 16px;
        }

        .spacer {
            height: 52px;
            width: 100%;
        }

        .w3-ul a {
            text-decoration: none;
        }

        .w3-ul li:hover {
            background-color: royalblue;
            color: white;
        }

            .w3-ul li:hover a {
                color: white;
            }
    </style>
</head>

<body>
    <!-- Navbar (sit on top) -->
    <a href="@Url.Action("Index", "PracticeAdmin")" style="display: inline; position: fixed; z-index: 2; background-color: royalblue;">
        <img src="~/Images/AIMS_Logo.jpg" class="img-rounded" style="width: 205px; height: 75px; margin-left: 5px; margin-right: auto; margin-top: 3px;" />
    </a>
    <div class="w3-top">
        <div class="w3-bar w3-card-2" id="myNavbar">
            @*<a href="#home" class="w3-bar-item w3-button w3-wide">LOGO</a>*@

            <!-- Right-sided navbar links -->
            <div class="w3-hide-small" style="margin-left: 250px;">
                <a href="@Url.Action("Index", "PracticeAdmin")" name="barButtonDrop" class="w3-bar-item w3-button">Current Patients</a>
                <a href="@Url.Action("Search", "PracticeAdmin")" name="barButtonDrop" class="w3-bar-item w3-button"><i class="fa fa-user"></i>Search Patients</a>
                <a href="@Url.Action("EditPreferences", "PracticeAdmin")" name="barButton" class="w3-bar-item w3-button"><i class="fa fa-user"></i>Edit Preferences</a>
                <a href="@Url.Action("Support", "PracticeAdmin")" name="barButton" class="w3-bar-item w3-button"><i class="fa fa-th"></i>Support</a>
            </div>
            <div class="w3-right w3-hide-small">
                <a href="@Url.Action("Change","Login")" type="text/html" class="navbar-text" style="text-decoration: underline;">Change Password</a>
                <a type="button" class="btn btn-warning btn-xs navbar-text img-rounded" href="@Url.Action("Logoff","Login")"
                   style="background-color: red; color: white; font-size: small; font-weight: bold; margin-left:20px;"
                   id="logoutButton">Log Out</a>
            </div>
            <!-- Hide right-floated links on small screens and replace them with a menu icon -->

            <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-large w3-hide-medium" onclick="w3_open()">
                <i class="fa fa-bars"></i>
            </a>
        </div>
    </div>
    <div class="spacer"></div>

    <div style="width: 95%; margin-left: auto; margin-right: auto;">
        @RenderBody()
        <hr />
        <footer>
            <div>
                <h5>&copy; 2017 - Emcomps</h5>
            </div>
        </footer>
    </div>
</body>
</html>