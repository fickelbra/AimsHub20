@model AimsHub.Models.ButtonWithHidden

@{
    Layout = null;
}

@{ if (Model.uniqueID.HasValue)
    {
        <input type="button" id="@Model.uniqueID" name="@Model.uniqueID" onclick="@Model.jqueryFunction" class="@Model.cls glyphicon glyphicon-search" value="Show Notes" />
        @Html.Hidden("hid" + Model.plogCol, Model.valu)
    }
    else
    {
        <input type="button" id="@Model.plogCol" name="@Model.plogCol" onclick="@Model.jqueryFunction" class="@Model.cls" value="Show Notes" />
        @Html.Hidden("hid" + Model.plogCol, Model.valu)
    }

}