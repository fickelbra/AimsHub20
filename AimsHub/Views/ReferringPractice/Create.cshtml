            Practice Location
        </div>
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.PracName, htmlAttributes: new { @class = "control-label col-md-1" })
                </td>
                <td>
                    @Html.EditorFor(model => model.PracName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PracName, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.LabelFor(model => model.Address1, htmlAttributes: new { @class = "control-label col-md-1" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
